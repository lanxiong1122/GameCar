<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#D6D6D6">
    <FrameLayout
        android:id="@+id/layout_ad"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/navigation2"
            android:scaleType="centerCrop"/>
        <cn.charon.racegame.carGame.GameView
            android:id="@+id/gameview_s"
            android:layout_width="0dp"
            android:layout_height="0dp"/>
    </FrameLayout>
    <Button
        android:id="@+id/btn_start_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始游戏"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="310dp"
        android:textSize="35sp"
        android:background="@drawable/navigation_bac"
        android:textColor="#FCFCFC"
        android:padding="5dp"
        />
    <Button
        android:id="@+id/btn_check_ranking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看排名"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn_start_game"
        android:textSize="35sp"
        android:layout_marginTop="40dp"
        android:background="@drawable/navigation_bac"
        android:textColor="#FCFCFC"
        android:padding="5dp"/>


</RelativeLayout>